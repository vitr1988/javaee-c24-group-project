<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Dmitry Kripan" id="Create-table-tracks">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tracks"/>
            </not>
        </preConditions>
        <createTable tableName="tracks">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="track_length" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="artist_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_track_artist" references="artists(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Dmitry Kripan" id="Create-tracks">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0"><![CDATA[
                select count(*)
                from tracks
                ]]>
            </sqlCheck>
            <sqlCheck expectedResult="1"><![CDATA[
                select count(*)
                from artists
                where name = 'Queen'
                ]]>
            </sqlCheck>
        </preConditions>

        <insert tableName="tracks">
            <!-- Id is auto incremented -->
            <column name="title" value="Bohemian Rhapsody"/>
            <column name="track_length" value="00:05:55"/>
            <column name="created_at" value="1975-10-31"/>
            <column name="text" value="Is this the real life? Is this just fantasy? Caught in a landslide, no escape from reality"/>
            <column name="updated_at" value="now"/>
            <column name="artist_id" valueComputed="(select id from artists where name = 'Queen')"/>
        </insert>
    </changeSet>
</databaseChangeLog>