<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Dmitry Kripan" id="Create-table-artists">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="artists"/>
            </not>
        </preConditions>
        <createTable tableName="artists">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Dmitry Kripan" id="Create-artists">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0"><![CDATA[
                select count(*)
                from artists
                ]]>
                </sqlCheck>
        </preConditions>

        <insert tableName="artists">
            <!-- Id is auto incremented -->
            <column name="name" value="Queen"/>
            <column name="updated_at" value="now"/>
        </insert>
    </changeSet>
</databaseChangeLog>